{
    "name": "scheb/tombstone",
    "description": "Dead code detection with tombstones for PHP",
    "keywords": ["tombstone", "dead code removal", "static code analysis", "dynamic code analysis"],
    "homepage": "https://github.com/scheb/tombstone",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Scheb",
            "email": "me@christianscheb.de"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "escapestudios/symfony2-coding-standard": "^3.9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "suggest": {
        "scheb/tombstone-analyzer": "Analysis tool for tombstone logs"
    },
    "autoload": {
        "psr-4": {
            "Scheb\\Tombstone\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scheb\\Tombstone\\Test\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
